# CEX / Hybrid execution tunables
CEX_MIN_EXEC_USD=2.0 # skip slices below this USD notional as dust
CEX_SLICE_TARGET_RATIO=0.7 # target slice impact ratio of MAX_ALLOWED_CEX_SLIPPAGE_BPS
CEX_BUY_TRUNCATION_TRIGGER_RATIO=0.25 # trigger inverse fallback when truncation ratio >= this value
CEX_BUY_INVERSE_OVERSPEND_BPS=10 # max allowed overspend (bps) in inverse/base buy fallback
CEX_BUY_INVERSE_MAX_RETRIES=1 # max inverse/base fallback attempts per leg
CEX_BUY_INVERSE_ENABLED=true # enable adaptive buy fallback after quote truncation
CEX_RETRY_BASE_SECS=5 # base backoff for retryable CEX errors
CEX_RETRY_MAX_SECS=120 # max backoff cap for retryable CEX errors
CEX_MIN_NET_EDGE_BPS=150 # minimum projected net edge required to execute
CEX_DELAY_BUFFER_BPS=75 # latency risk haircut applied to projected edge
CEX_ROUTE_FEE_BPS=25 # estimated route fee haircut (bps)

# Force CEX in hybrid when notional >= threshold (set 0 to disable)
